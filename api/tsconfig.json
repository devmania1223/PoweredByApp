{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "lib": ["esnext.asynciterable", "es2015", "es6"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false, // prevent compilation failure resulting from 'defined but never used' errors. Make sure unused vars are covered by ESLint instead.
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "typings", "tslint-rules"],
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests"]
}
